<view class="page">
  <view class="page__bd">
    <view class="weui-grids">
      <block wx:for="{{categories}}" wx:key="*this">
        <view class="weui-grid"  bindtap="selectCategory">
          <image class="weui-grid__icon" src="{{item.icon_path_normal}}" />
          <view class="weui-grid__label">{{item.category_name}}</view>
        </view>
      </block>
    </view>
    
    <view class="weui-btn-area">
      <navigator url="/pages/post-new/post-new">
      <button class="weui-btn" form-type="submit" type="primary">发布帖子</button>
      </navigator>
    </view>

    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__hd">社区</view>
      <view class="weui-panel__bd" wx:for="{{ postList }}" wx:key="{{ index }}">
        <navigator url="/pages/post-detail/post-detail?postId={{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="https://media.ifanrusercontent.com/media/user_files/hydrogen/6a/36/6a369199833c1cebb6b84c5846fa1b8aa528ceff-9425e355fc72caa95825a21db00aabb45d3b40d9.jpg"
            />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{item.title}}</view>
            <view class="weui-media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>
          </view>
        </navigator>

      </view>
      <!-- <view class="weui-panel__ft">
        <view class="weui-cell weui-cell_access weui-cell_link">
          <view class="weui-cell__bd">查看更多</view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
      </view> -->
    </view>
    
  </view>
</view>