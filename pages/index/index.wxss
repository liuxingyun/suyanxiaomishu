/**index.wxss**/
.index {
  width: 100%;
  height: 100%;
  position: relative;
  font-size: 28rpx;
  border: 1rpx solid transparent;
}



.index-todos {
  width: 80%;
  margin: 50rpx auto;
  overflow: hidden;
}

.index-todos__input {
   width: 100%;
}

.index-todos__input input {
  border: 1rpx solid #eee;
  height: 60rpx;
  line-height: 50rpx;
  padding: 5rpx 10rpx;
  margin-top:20px;
}

.index-todos__showLayer {
  margin-top: 20rpx;
  max-height: 550rpx;
  overflow: auto;
}

.index-todos__item {
  display: flex;
  min-height: 60rpx;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.index-todos__controls--show,
.index-todos__controls--edit-area {
  flex-basis: 40%;
}

.index-todos__controls--show,
.index-todos__controls--edit-area > input {
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid transparent;
  padding: 0 10rpx;
}

.index-todos__controls--edit-area > input {
  border: 1rpx solid #eee;
  padding: 4rpx 10rpx;  /*hack 上下 4rpx 为了解决 input 显示时文字的移动*/
}

.index-todos__controls--create {
  margin: 40rpx 0;
}

.btn {
  font-size: 20rpx;
  margin: 0 10rpx;
}