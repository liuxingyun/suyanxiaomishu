<view class="page">
  <view class="page__bd">
    <view class="weui-grids">
      <block wx:for="{{categories}}" wx:key="*this">
        <navigator url="../detail/detail?contentId={{item.content_id}}" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="{{item.icon_path}}" />
          <view class="weui-grid__label">{{item.category_name}}</view>
        </navigator>
      </block>
    </view>
  </view>
</view>